<%- include('partials/header2') %>

<div class="container my-5">
  <div class="position-relative p-5 text-center text-muted bg-body border border-dashed rounded-5">
    <svg class="bi mt-5 mb-3" width="48" height="48">
      <use xlink:href="#check2-circle"></use>
    </svg>
    <h1 class="text-body-emphasis"><%= userName %></h1>
    <p class="col-lg-12 mx-auto mb-10" id="detail">
      <strong>Gender:</strong> <%= userGender %><br>
      <strong>Email:</strong> <%= userEmail %><br>
      <strong>Division:</strong> <%= userDivision %><br>
      <strong>Address:</strong> <%= userAddress %><br>
      <strong>Phone:</strong> <%= userPhone %><br>
    </p>
    <a href="/profile" class="btn btn-primary px-5 mb-5">
      Edit Profile
    </a>
  </div>
</div>

<%- include('partials/footer2') %>
